<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/HibernateMappingDTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="es.florida.hibernate">
    <class name="Cancion" table="canciones">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="titulo" type="string" column="titulo"/>
        <property name="artista" type="string" column="artista"/>
        <property name="anyo" type="int" column="anyo"/>
        <property name="formato" type="string" column="formato"/>
    </class>
</hibernate-mapping>